
<form method="POST" action="/add-product">
    <input name="name" placeholder="Product Name" required><br>
    <input name="price" placeholder="Price" type="number" required><br>
    <input name="category" placeholder="Category"><br>
    <input name="image" placeholder="Image URL"><br>
    <textarea name="description" placeholder="Description"></textarea><br>
    <input name="stock" placeholder="Stock" type="number"><br>
    <button type="submit">Add Product</button>
</form>
